<link href="~/wwwroot/css/all.css" rel="stylesheet" />

<style>
    div {
        border-radius: 5px;
        background-color: #f2f2f2;
        padding: 5px;
        width:60%;
       
        
    }

    input[type=text] {
        width: 60%;
        padding: 6px 20px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }
    input[type=radio]{
  display: inline-block;
    }


